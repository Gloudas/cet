<html>
<head>
    <meta charset="utf-8">
    <title>Applied Innovations Institute &middot; </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->

    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "bootstrap-responsive" %>

  </head>

<body>
  
  <%= render "/navbar"%>

  <div class = "row">
    <div align = "center">
      <h0>Upcoming Events</h0>
    </div>
  </div>

  <hr class="featurette-divider">
 
  <br>
    
  <div class = "row">
    <div align = "center">
      <% @events.each do |event| %>
      <p><%= event.name %></p>
      <p><%= event.description %></p>
      <p><%= event.date %></p>
      <p><%= event.time %></p>
      <li><%= link_to "Edit", edit_event_path(event.id) %></li>
      <br>
      <% end %>
    </div>
  </div>

  <br>

 <div class = "row">
    <div align = "center">
      <h3>Create New Event</h3>
    </div>
  </div>
  

  <div class = "row">

  <%= form_tag new_event_path do %>
  
  <%= label :event, :name, "Name:" %>
  <textarea class="field span6" id="name" name="event[name]" rows="1" columns="150"></textarea>
  
  <%= label :event, :description, "Enter a short description:" %>
  <textarea class="field span6" id="description" name="event[description]" rows="6"></textarea>

  <%= label :event, :date, "Date:" %>
  <%= date_select :event, :date %>

  <%= label :event, :time, "Time:" %>
  <%= time_select :event, :time, :prompt => {:hour => 'Choose Hour', :minute => 'Choose Minute'}, :ampm => true, :minute_step => 15 %>

  <br>
  <%= submit_tag "Create Event" %>
  <% end %>
</div>

</body>
</html>
