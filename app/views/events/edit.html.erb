<html>
<head>
    <meta charset="utf-8">
    <title>Applied Innovations Institute &middot; </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->

    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "bootstrap-responsive" %>

  </head>

<body>
  
  <%= render "/navbar"%>

  <div class = "row">
    <div align = "center">
      <h2>Edit Event</h2>
    </div>
  </div>

  <hr class="featurette-divider">
 
  <br>

  <%= form_tag update_event_path(@eid) do %>

  <%= label :event, :name, "Name:" %>
  <textarea class="field span12" id="name" name="event[name]" rows="1" columns="150"><%= @event.name %></textarea>

  <%= label :event, :description, "Enter a short description:" %>
  <textarea class="field span12" id="description" name="event[description]" rows="6"><%= @event.description %></textarea>
    
  <!-- TODO figure out how to display date and time -->

  <br><br> <%= submit_tag "Update Event" %>
  
  <% end %>

</body>
</html>
