<html>
<head>
    <meta charset="utf-8">
    <title>Applied Innovations Institute &middot; </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->

    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "bootstrap-responsive" %>

  </head>

<body>
  
  <%= render "/navbar"%>

  <div class = "row">
    <div align = "center">
      <h2>Edit Event</h2>
    </div>
  </div>

  <hr class="featurette-divider">
 
  <br>

  <%= form_for @event, :url => update_event_path(@eid) do |f| %>

  <%= f.label :name, "Name:" %>
  <%= f.text_area :name, :class => 'field span6', :id => 'name', :rows => 1, :value => @event.name %>

  <%= f.label :description, "Enter a short description:" %>
  <%= f.text_area :description, :class => 'field span6', :id => 'description', :rows => 6, :value => @event.description %>
  
  <br>

  <%= f.datetime_select :time, :prompt => {:hour => @event.time.hour, :minute => @event.time.min}, :ampm => true, :minute_step => 15 %>

  <br><br> 
  <%= f.submit "Update Event" %>
  
  <% end %>

	<%= render "/footer"	%>

</body>
</html>
