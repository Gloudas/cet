<html>
<head>
  <%= image_tag("logo.png") %>
  <title>Applied Innovations Institute</title>
  <%= stylesheet_link_tag "bootstrap" %>
</head>

<body>
  <h1><%= @project.title %></h1>

  <%= form_tag edit_project_path do %>

    <%= label :project, :name, "Title:" %>
    <%= text_field :project, 'title', :value => @project.title, :id => 'title' %>

    <%= label :project, :description, "Enter a short description:" %>
    <textarea class="field span12" id="description" name="project[description]" rows="6"><%= @project.description %></textarea>
    
    <br> Collaborators
    <% @project.users.each do |user| %>
      <% # you have to make it so your own name doesn't appear on this list %>
      <%= user.name %>
    <% end %>

  <br><br> <%= submit_tag "Update Project Information" %>

  <% end %>
  
</body>
</html>
