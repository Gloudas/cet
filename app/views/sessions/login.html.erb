<html>
<head>
  <title>Applied Innovations Institute</title>
  <%= stylesheet_link_tag "bootstrap" %>
</head>

<body>
  <div id="wrapper">

    <div id="header">
    </div>

    <div id="content">
      <hr class="featurette-divider">
      <div class="row">
	<%= image_tag("logoBlackText.png", :size => "250x150") %>
      </div>
      <div class="row">
	<h3> Please sign in below. </h3>
      </div>
      <br>
      <div class="row">	
	<%= form_for(:sessions, url: "/auth/password/callback") do |f| %>
	
        <%= label_tag :email %>
        <%= f.text_field :email %>
	
        <%= label_tag :password %>
        <%= f.password_field :password %>
	
	<div class="row">
  	  <% if flash[:error] %>
  	  <p class="text-error"><%= flash[:error] %></p>
  	  <% end %>
  	  <% if flash[:notice] %>
  	  <p class="notice"><%= flash[:notice] %></p>
  	  <% end %>
	</div>
	<br>
        <%= submit_tag "Sign In", {:class => "btn btn-primary btn-medium" } %>
	<% end %>
      </div>

    </div> <!-- End of Content Div -->

    <div id="footer">
      <%= render "/footer" %>
    </div>

  </div>
</body>
</html>
